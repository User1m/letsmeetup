<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mbembac.letsmeetup.LoginActivty"
    android:background="#BDF2FF">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:clickable="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/login_main_title"
            android:textColor="#003366"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:id="@+id/login_main_title"
            android:textSize="55sp"
            android:padding="25sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/login_username_label"
            android:textColor="#003366"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/login_username_label"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#003366"
            android:textColorHighlight="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:background="#FFEEFF"
            android:layout_gravity="center_horizontal"
            android:id="@+id/login_username"
            android:layout_marginBottom="10sp"
            android:ems="10"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/login_password_label"
            android:textColor="#003366"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/login_password_label"
            android:layout_gravity="center_horizontal" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#003366"
            android:textColorHighlight="#FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:background="#FFEEFF"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:id="@+id/login_password" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/login_button"
            android:fontFamily="sans-serif-short"
            android:textAllCaps="true"
            android:id="@+id/login_button"
            android:textSize="15sp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:onClick="login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/register_button"
            android:fontFamily="sans-serif-short"
            android:textAllCaps="true"
            android:id="@+id/create_button"
            android:textSize="15sp"
            android:layout_margin="0dp"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:padding="10sp"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lost_password_button"
            android:fontFamily="sans-serif-short"
            android:id="@+id/lost_password_button"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:padding="10sp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>
