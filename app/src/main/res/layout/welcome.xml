<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbembac.letsmeetup.Application"
    android:background="#B7FFF0">

<TextView
        android:id="@+id/txtwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Welcome"
        android:textAlignment="center"
        android:paddingTop="40dp"
        android:fontFamily="sans-serif-short"
        android:textAllCaps="true"
        android:textColor="#003366"
        android:textStyle="bold"
        android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true" />

    <!--friends who are close-->

    <TextView
        android:id="@+id/welcometitle"
        android:text="@string/welcomemsg"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtuser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/friendme_button"
        android:text="@string/findfriend"
        style="@style/button_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/logout"
        android:text="@string/LogoutBtn"
        style="@style/button_text"
        android:layout_below="@+id/friendme_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
